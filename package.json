{
  "name": "dothum",
  "private": true,
  "workspaces": [
    "app/",
    "packages/*",
    "packages/wasm/pkg"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/seeker-3/dothum.git/"
  },
  "scripts": {
    "build": "run-p build:complementary-chords build:percussion build:pitch-finder",
    "build:wasm": "wasm-pack build packages/wasm -s dothum --target web",
    "build:complementary-chords": "cd packages/complementary-chords && pnpm build",
    "build:percussion": "cd packages/percussion && pnpm build",
    "build:pitch-finder": "cd packages/pitch-finder && pnpm build",
    "clean:wasm": "rm -rf packages/wasm/pkg",
    "lint": "eslint .",
    "lint:style": "stylelint app/**/*.scss",
    "lint:style:fix": "stylelint app/**/*.scss --fix",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.1",
    "prettier": "^2.4.1",
    "stylelint": "^14.1.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "^4.5.2"
  }
}
